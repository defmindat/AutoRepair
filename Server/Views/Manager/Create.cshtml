@model Application.InputModels.EditManagerInputModel
@{
    ViewBag.Title = "Добавление пользователя";
    Layout = "_Layout";
}

@section Scripts
{
    <script src="~/select2/js/select2.full.min.js"></script>
    <script src="~/js/createManager.js"></script>
}

<form asp-action="Create" asp-controller="Manager">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <label for="officeId">Клиент</label>
    
     <div class="form-group">
            <label for="officeId">Клиент</label>
             <select name="officeId" class="form-control" id="officeId">
                 @if (Model?.OfficeId != null)
                 {
                     <option value="@Model.OfficeId.Value"></option>
                 }
             </select>
     </div>
     
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control"/>
    </div>
    <div class="form-group">
            <label asp-for="Lastname" class="control-label">Lastname</label>
        <input type="text" asp-for="Lastname" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Firstname" class="control-label">Firstname</label>
        <input type="text" asp-for="Firstname" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="password" asp-for="Password" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Год рождения</label>
        <input type="number" asp-for="Year" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary"/>
    </div>
</form>